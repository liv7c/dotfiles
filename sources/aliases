# make file navigation easier
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# escape color sequences
alias less="less -R"

# npm related
alias npms="npm run start"
alias npmd="npm run dev"
alias npmt="npm test"
alias npmtw="npm run test:watch"
alias npmb="npm run build"

# yarn related
alias ys="yarn start"
alias yd="yarn dev"
alias yt="yarn test"

# pnpm related
alias pn="pnpm"
alias pns="pnpm start"

# rust related
alias ca="cargo"

# go related
# go test with watch mode + clearer error output
alias gtw="gotestsum --format testname  --watch -- -race"

# tmux related
alias tm="tmux"
alias tmk="tmux kill-server"
alias tma="tmux attach-session"
alias tx="tmuxinator"
alias tmns="tmux new-session -s misc -d"

# each keystroke counts...
alias nv="nvim"
alias e="nvim"

# vscode
alias vsc="code ."

# git related
alias g="git"
alias gaf='git ls-files -m -o --exclude-standard | fzf -m --print0 | xargs -0 -o -t git add'
alias gri='git rebase -i `fcs`'

# commonly used directories
alias d="cd ~/Documents"
alias dt="cd ~/Desktop"
alias doc="cd ~/Documents/docs"
alias dot="cd ~/projects/dotfiles"
alias co="cd ~/courses"
alias p="cd ~/projects"
alias nconfig="cd ~/nvim-config"
alias sb="cd ~/projects/swayandbreathe"

# bat - better cat with colored output and other goodies
alias bat="bat --style='numbers,changes' --theme='TwoDark'"

# ls aliases for color output + long form
alias ls="ls -G"
alias ll="ls -lahG"

# alias for k8s
alias k="kubectl"

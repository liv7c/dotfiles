[fetch]
  prune = 1

[push]
  default = simple
  autoSetupRemote = true

[pull]
  rebase = merges

[rebase]
  autosquash = true

[alias]
  aa = add --all
  s = status -s
  st = status
  b = branch
  c = commit --verbose
  ct = commit
  cm = commit -m
  cp = cherry-pick
  co = checkout
  amend = commit --amend
  commend = commit --amend --no-edit
  dc = diff --cached
  l = "!source ~/.githelpers && pretty_git_log"
  la = !git l --all
  lr = !git l -20
  ll = log --oneline --graph
  p = push
  pf = push --force-with-lease
  unstage = restore --staged .
